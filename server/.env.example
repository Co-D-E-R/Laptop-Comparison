# Server Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/laptop-comparison

# For MongoDB Atlas (replace with your connection string):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/laptop-comparison?retryWrites=true&w=majority

# Server Configuration
PORT=8080
NODE_ENV=development

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Optional: Google AI API Key (if using server-side AI features)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
